package de.udemy.threadapi;

import java.util.Date;
import java.util.concurrent.TimeUnit;

public class NamingThread implements Constants{

	public static void main(String[] args) {
		String thrad = Thread.currentThread().getName();
		Date before = new Date();
		System.out.println("Thread "+thrad+" starts at "+STF.format(before));
		
		new Thread(new LoopTaskName()).start();
		Thread t2 = new Thread(new LoopTaskStay(), "Thread 2");
		t2.start();
		Thread t3 = new Thread(new LoopTaskStay());
		t3.setName("Thread 3");
		t3.start();
		
		System.out.println("Thread "+thrad+" has finished in "+TimeUnit.MILLISECONDS.convert(new Date().getTime() - before.getTime(), TimeUnit.MILLISECONDS)+"  millis");
	}

}
