package de.udemy.threadapi;

import java.util.Date;
import java.util.concurrent.TimeUnit;

import de.udemy.threadapi.Constants;

public class LoopTaskB implements Runnable, Constants {
	
	public static final String name = "Task";
	public final String thread;

	private static int count = 0;
	private int id;
	Date before;
	
	public static int FAK = 1000;
	
	public LoopTaskB() {
		super();
		before = new Date();
		thread = Thread.currentThread().getName();
		
		System.out.println(thread+name+id+" starts at "+STF.format(before));
		this.id = ++count;
	}

	@Override
	public void run() {
		for(int i = 10; i > 0; i-- ) {
			System.out.println("<"+thread+name+id+"> TICK TICK " + i);
			
			try {
				TimeUnit.MILLISECONDS.sleep((long)(FAK * RAND.nextDouble()));
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		System.out.println(thread+name+id+" has finished in "+TimeUnit.MILLISECONDS.convert(new Date().getTime() - before.getTime(), TimeUnit.MILLISECONDS)+" millis");
	}
}